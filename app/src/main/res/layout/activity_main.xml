<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20D94C"
    tools:context=".LoginScreenActivity">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_field"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">



        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_edittext"
            android:drawableStart="@drawable/login_email_symbol"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_edittext"
            android:drawableStart="@drawable/login_password_symbol"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp" />


        <android.widget.Button
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_button"
            android:onClick="launchCalendar"
            android:text="Login" />


        <android.widget.Button
            android:id="@+id/signUpButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:minHeight="48dp"
            android:onClick="signUp"
            android:text="Sign up" />
        <TextView
            android:id="@+id/loginInputEmptyTextView"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="please provide user information"
            android:background="@drawable/login_error_textview_background"
            android:textColor="@color/black"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="341dp"
        android:layout_height="228dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
