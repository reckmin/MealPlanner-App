<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DailyFragment">


    <ScrollView
        android:id="@+id/calendarFragmentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <!-- Breakfast> Puncakes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Dish 1 Photo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >

                    <ImageView
                        android:id="@+id/dish1ImageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pancakes" />

                    <ImageView
                        android:id="@+id/dish1FavoriteImageView"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/clicked_favorite_24"
                        android:clickable="true"
                        android:focusable="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/dish1NameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simple Vegan Puncakes"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- tags try1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/dish1DietaryTag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegan"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/tabs_selector"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/dish1DietaryTag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gluten Free"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/tabs_selector"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/dish1DietaryTag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/tabs_yellow"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textStyle="italic"
                    android:text="These vegan pancakes are light, fluffy and are made with just 6 ingredients that you probably already have on hand. "
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/showMoreButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/green"
                    android:minWidth="20dp"
                    android:minHeight="28dp"
                    android:textStyle="bold"
                    android:text="Show More"
                    android:textColor="@color/teal_700"
                    android:textSize="12sp" />

                <!-- Breakfast Ingredients linlayaout1-->
                <LinearLayout
                    android:id="@+id/linlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dish1IngredientsTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="Ingredients:" />

                    <TextView
                        android:id="@+id/ingredientTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="1/2 cups all purpose flour"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                    <TextView
                        android:id="@+id/ingredientTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="1 tablespoon baking powder"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                    <TextView
                        android:id="@+id/ingredientTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="1/2 teaspoon salt"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                    <TextView
                        android:id="@+id/ingredientTextView5"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="2 tablespoons granulated sugar"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                    <TextView
                        android:id="@+id/ingredientTextView6"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="1 cup soy milk"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                    <TextView
                        android:id="@+id/ingredientTextView7"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="1/2 cup water"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                    <TextView
                        android:id="@+id/ingredientTextView8"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="2 tb canola oil"
                        android:buttonTint="@color/green"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:drawablePadding="8dp" />
                </LinearLayout>
                <!--table1 -->
                <TableLayout
                    android:id="@+id/table1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tabs_selector"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                    <!-- Header Row -->
                    <TableRow>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prep"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cook"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Servings"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>
                    </TableRow>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFFFFF" />

                    <!-- Data Row -->
                    <TableRow>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 mins"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 mins"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 mins"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 servings"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </TableRow>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFFFFF" />


                </TableLayout>
                <!--dish1TextView1 -->
                <TextView
                    android:id="@+id/dish1TextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directions"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <!-- Breakfast Directions -->
                <!--dish1DirectionsTextView -->
                <TextView
                    android:id="@+id/dish1DirectionsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Step 1: In a large bowl, whisk together the flour, baking powder, salt and sugar.
                            \nStep 2: Pour the milk, water and oil into the bowl with the dry ingredients, and stir with a large spoon until just combined. A few lumps are okay; do not over mix or your pancakes won't be as fluffy.
                            \nStep 3: Heat a large griddle or pan over medium-high heat. Grease the pan with vegan butter or coconut oil, and drop about 1/3 cup of the batter onto it. Cook until bubbles form, then flip and cook until golden brown on the other side, about 1-2 minutes. Repeat with all the remaining batter.
                            \nStep 4: Serve with vegan butter, pure maple syrup and perhaps some fresh fruit." />





            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</FrameLayout>
