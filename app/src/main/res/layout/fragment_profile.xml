<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/fragmentProfileDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/calendarFragmentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userProfilePictureImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="128dp"
                    android:layout_marginTop="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/user_profile_image_default"
                    tools:srcCompat="@drawable/user_profile_image_default" />

                <ImageView
                    android:id="@+id/userProfileSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat = "@drawable/profile_settings_icon3"
                    tools:srcCompat="@drawable/profile_settings_icon3"
                  />
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <android.widget.Button
                    android:id="@+id/editProfileButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_edit_button"
                    android:text="Edit Profile"
                    android:textSize="20dp"
                    android:clickable="false"
                    />

            </LinearLayout>
<!--Name_________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id = "@+id/profileUserNameTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/profileUserNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/fragment_profile_edittext"
                    android:drawablePadding="8dp"
                    android:hint="Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:enabled="true"
                    />


            </LinearLayout>
            <!--Age_________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id = "@+id/profileAgeTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/profileAgeEditText"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/fragment_profile_edittext"
                    android:drawablePadding="8dp"
                    android:hint="18"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:enabled="true"
                    />


            </LinearLayout>
            <!--Weight_________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id = "@+id/profileWeightTextView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:text="Weight"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/profileWeightEditText"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/fragment_profile_edittext"
                    android:drawablePadding="8dp"
                    android:hint="80"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:enabled="true"
                    />
                <TextView
                    android:id = "@+id/profileWeightKGTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <!--Allergies_________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:id = "@+id/profileAllergiesTextView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:text="Allergies"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical"

                >


                    <CheckBox
                        android:id="@+id/allergiesLactoseRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lactose"
                        android:buttonTint="#56dc75"
                        android:enabled="true"

                        />
                    <CheckBox
                        android:id="@+id/allergiesGlutenRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gluten"
                        android:buttonTint="#56dc75"
                        android:enabled="true"
                        />
                    <CheckBox
                        android:id="@+id/allergiesNutsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuts"
                        android:buttonTint="#56dc75"
                        android:enabled="true"
                        />
                    <CheckBox
                        android:id="@+id/allergiesSeafoodRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seafood"
                        android:buttonTint="#56dc75"
                        android:enabled="true"
                        />
            </LinearLayout>

            </LinearLayout>
            <!--Goal_________________________________________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id = "@+id/profileGoalTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Goal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"

                    >
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <RadioButton
                            android:id="@+id/goalGainRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gain Weight"
                            android:buttonTint="#56dc75"
                            android:enabled="true"
                            />
                        <RadioButton
                            android:id="@+id/goalLoseRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lose Weight"
                            android:buttonTint="#56dc75"
                            android:enabled="true"
                            />
                        <RadioButton
                            android:id="@+id/goalMaintainRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maintain Weight"
                            android:buttonTint="#56dc75"
                            android:enabled="true"
                            />
                        <RadioButton
                            android:id="@+id/goalMuscleRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gain Muscle"
                            android:buttonTint="#56dc75"
                            android:enabled="true"
                            />
                    </RadioGroup>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>





    </ScrollView>

        <!-- Side Menu -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sideMenuProfile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            app:menu="@menu/profile_settings_side_menu"
            android:backgroundTint="#d4f9dd"

            android:background="#ffffff"
          />

    </androidx.drawerlayout.widget.DrawerLayout>

</FrameLayout>